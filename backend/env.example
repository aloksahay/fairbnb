# Server Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# Shared Private Key (used for both 0G and Celo networks)
PRIVATE_KEY=your_private_key_here

# 0G Storage Configuration
ZEROG_RPC_URL=https://evmrpc-testnet.0g.ai/
ZEROG_INDEXER_RPC=https://indexer-storage-testnet-turbo.0g.ai

# 0G Compute Configuration (using official llama-3.3-70b-instruct provider)
# Provider address is hardcoded to official 0G AI service: 0xf07240Efa67755B5311bc75784a061eDB47165Dd
ZEROG_FALLBACK_FEE=0.01

# Celo Network Configuration
CELO_RPC_URL=https://alfajores-forno.celo-testnet.org

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Database Configuration (if needed later)
DATABASE_URL=your_database_url_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Contract Verification (Optional)
CELOSCAN_API_KEY=your_celoscan_api_key
SELF_VERIFICATION_CONTRACT_ADDRESS=will_be_set_after_deployment 