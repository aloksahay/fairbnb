{
  "name": "fairbnb-backend",
  "version": "1.0.0",
  "description": "Fairbnb backend with 0G Storage integration",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile": "npx hardhat compile",
    "deploy:testnet": "npx ts-node scripts/deploy.ts",
    "verify": "npx hardhat verify --network alfajores",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp -r src/public dist/ || true"
  },
  "keywords": [
    "fairbnb",
    "0g-storage",
    "decentralized",
    "storage",
    "api"
  ],
  "author": "Alok",
  "license": "MIT",
  "dependencies": {
    "@0glabs/0g-serving-broker": "^0.2.13",
    "@0glabs/0g-ts-sdk": "^0.2.1",
    "@selfxyz/core": "^1.0.5-beta.1",
    "@selfxyz/qrcode": "^1.0.10-beta.1",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethers": "6.13.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "tslib": "^2.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@types/uuid": "^10.0.0",
    "hardhat": "^2.22.0",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
